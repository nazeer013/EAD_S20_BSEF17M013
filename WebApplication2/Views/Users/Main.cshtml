@using Entities;
@model List<Folders>
@{
    ViewBag.Title = "Main";
}
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>
    <style>


        
        .modal {
            display: none; /* Hidden by default */
            position: fixed; /* Stay in place */
            z-index: 1; /* Sit on top */
            padding-top: 100px; /* Location of the box */
            left: 0;
            top: 0;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            overflow: auto; /* Enable scroll if needed */
            background-color: rgb(0,0,0); /* Fallback color */
            background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        }

        .modal-content {
            background-color: #fefefe;
            margin: auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }

        .close {
            color: #aaaaaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: #000;
                text-decoration: none;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <div class='row'>
        <div class="col-md-6 login-left">
            <h2> Home Screen </h2>
        </div>
    </div>

            <div>
                <form action='@Url.Content("~/Users/SignUp")' method="get">

                    <div class="from-group">
                        <button type="submit" class="btn btn-primary">Logout</button><br>
                    </div>
                </form>
            </div><br />

                  <div>
                      <div class="from-group">
                          <button id="back" class="btn btn-primary" onclick="GoBack()">Go Back</button><br>
                      </div><br/>
                      <!-- Trigger/Open The Modal -->
                      <div class="from-group">
                          <button id="myBtn" class="btn btn-primary" onclick="GoBack()">Create New Folder</button><br>
                      </div>
                      
                  </div><br/>

            <!-- The Modal -->
            <div id="myModal" class="modal">

                <!-- Modal content -->
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <div class="from-group">
                        Folder Name:<input type="text" id="folderName" />
                        <button type="submit" id="createFolder" class="btn btn-primary" onclick="createFolder()">Create</button><br>
                    </div>
                </div>

            </div>


            <div id="mainDiv">

            </div>


            <script>
        function GoBack() {
            var d = {};
            var settings = {
                type: "POST",
                dataType: "json",
                url: '@Url.Content("~/Users/OpenParentFolder")',
                data: d,
                success: OpenParent,
                error: OnError
            };
            $.ajax(settings);
            function OpenParent(folders) {
                 $("#mainDiv").empty();
                for (var i = 0; i < folders.length; i++) {
                    var btn1 = document.createElement("button");
                    btn1.setAttribute("id", folders[i].ID);
                    btn1.innerText = folders[i].Name;
                    btn1.setAttribute("class", "folders");
                    btn1.addEventListener('dblclick', function () { openFolder(this.id) });
                    $("#mainDiv").append(btn1);
                }
            }
        }

        function createFolder() {
            var folderName = document.getElementById("folderName").value;
            console.log(folderName);
            if (folderName == "") {
                alert("Please enter folder name.");
            }
            else {
                var d = { Name: folderName };
                var settings = {
                    type: "POST",
                    dataType: "json",
                    url: '@Url.Content("~/Users/CreateFolder")',
                    data: d,
                    success: displayFolder,
                    error: OnError
                };
                $.ajax(settings);
                console.log(folderName);
                function displayFolder(id) {
                    var btn1 = document.createElement("button");
                    btn1.setAttribute("id", id);
                    btn1.innerText = folderName;
                    btn1.setAttribute("class", "folders");
                    btn1.addEventListener('dblclick', function () { openFolder(this.id) });
                    $("#mainDiv").append(btn1);
                }
            }
        }
        $(document).ready(function () {
            var Id = { id: 0 };
    var settings= {
				type: "POST",
				dataType: "json",
				url: '@Url.Content("~/Users/GetFolders")',
				data: Id,
				success: mainFolders,
				error: OnError
            };

			$.ajax(settings);
            console.log('request sent');
            function mainFolders(folders) {

                for (var i = 0; i < folders.length; i++) {
                    var btn1 = document.createElement("button");
                    btn1.setAttribute("id", folders[i].ID);
                    btn1.innerText = folders[i].Name;
                    btn1.setAttribute("class", "folders");
                    btn1.addEventListener('dblclick', function () { openFolder(this.id) });
                    $("#mainDiv").append(btn1);
                }
            }
            console.log("after main");
            function OnError(){
                alert("some error has occured");
            }

        });
        function openFolder(id1) {
            var Id = { id: id1 };
    var settings= {
				type: "POST",
				dataType: "json",
				url: '@Url.Content("~/Users/GetFolders")',
				data: Id,
				success: mainFolders,
				error: OnError
            };

			$.ajax(settings);
            function mainFolders(folders) {
                $("#mainDiv").empty();
                for (var i = 0; i < folders.length; i++) {
                    var btn1 = document.createElement("button");
                    btn1.setAttribute("id", folders[i].ID);
                    btn1.innerText = folders[i].Name;
                    btn1.setAttribute("class", "folders");
                    btn1.addEventListener('dblclick', function () { openFolder(this.id) });
                    $("#mainDiv").append(btn1);
                }
            }

        };

         function OnError(){
                alert("some error has occured");
        }

            </script>



            <script>
                var modal = document.getElementById("myModal");

                var btn = document.getElementById("myBtn");

                var span = document.getElementsByClassName("close")[0];

                btn.onclick = function () {
                    modal.style.display = "block";
                }

                span.onclick = function () {
                    modal.style.display = "none";
                }

                window.onclick = function (event) {
                    if (event.target == modal) {
                        modal.style.display = "none";
                    }
                }
            </script>

</body>
</html>






